<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_developer"
    android:padding="10dp"
    android:background="#128EBE"
    android:layout_margin="2dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#D3D019"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                app:srcCompat="@drawable/developer1"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AL ARAF RABBY"/>
            <TextView
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSC in CSE(Dhaka City College)"/>
            <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp"
                app:srcCompat="@drawable/developer2"
                />
            <TextView
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MD.Shahidul Islam"/>
            <TextView
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSC in CSE(Dhaka City College)"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>