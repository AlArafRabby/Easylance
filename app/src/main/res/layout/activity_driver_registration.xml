<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#1A7DE7"
    tools:context=".DriverRegistration">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textColor="#FAFFFF"
                android:text="Driver Register"
                android:gravity="center"
                android:layout_marginBottom="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Name:"
                android:layout_marginBottom="20sp"/>

            <EditText
                android:id="@+id/driverName"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="#FFFFFF"
                android:hint="Enter Full Name"
                android:inputType="textPersonName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Email:"
                android:layout_marginBottom="20sp"/>

            <EditText
                android:id="@+id/driveremail"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:hint="Enter Email address"
                android:background="#FFFFFF"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Mobile Number:"
                android:background="@null"
                android:layout_marginBottom="20sp"/>

            <EditText
                android:id="@+id/drivermobile"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile Number"
                android:background="#FFFFFF"
                android:inputType="phone"
                android:layout_marginBottom="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Password:"
                android:layout_marginBottom="20sp"/>

            <EditText
                android:id="@+id/driverpassword"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:hint="Enter password"
                android:background="#FFFFFF"
                android:layout_marginBottom="20sp"
                android:inputType="numberPassword"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Licence Number:"
                android:layout_marginBottom="20sp"/>

            <EditText
                android:id="@+id/driverlicence"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:hint="Enter Email address"
                android:background="#FFFFFF"
                android:layout_marginBottom="20sp"/>

            <Button
                android:id="@+id/driverRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginBottom="20sp"
                />



        </LinearLayout>
    </ScrollView>






</RelativeLayout>